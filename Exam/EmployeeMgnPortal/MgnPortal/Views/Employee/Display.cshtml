@using model;
@{
    ViewData["Title"] = "Employee Page";
}

<div class="text-center contain">
    <h1 class="display-4">Display Employee</h1>
    <hr/>
    @{
        var res = this.ViewData["res"] as string;
        var list = this.ViewData["list"] as List<Employee>;
        <div>
            <p>@res</p>
            <table border="1">
                <thead align="center">
                    <tr>
                        <th>Emp Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Display</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody align="center">
                    @foreach(var emp in list){
                        <tr>
                            <td>@emp.EmpId</td>
                            <td>@emp.FName</td>
                            <td>@emp.LName</td>
                            <td><a href="/Employee/Show/@emp.EmpId">Display</a></td>
                            <td><a href="/Employee/Update/@emp.EmpId">Edit</a></td>
                            <td><a href="/Employee/Delete/@emp.EmpId">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br>
            <br>
            <a href="Add"><button class="btn btn-primary">Add New Employee</button></a>

        </div>
    }
</div>
